
  
<p>Marchando una pregunta de  <b><%= quiz.tema %></b>, de <b>dificultad <%= quiz.dificultad %>/3</b>. </p>
    <form method="get" action="/quizes/<%= quiz.id %>/answer">
	  Pregunta: <%= quiz.pregunta %> </p>
	  <input type="text" name="respuesta" value"Escriba aquí"/>
	  <input type="submit" value="Enviar">
	  </form>
	  <p>&nbsp;</p>
<div style="background-color:#CCA">

<p><br/><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a></p>	  


<h3>Comentarios:</h3>
<% for(index in quiz.comments) { %>
 	<%if(quiz.comments[index].publicado  || session.user ) { %>  
		<p> - <%= quiz.comments[index].texto %> <br/>
		 <span style="color:#777;font-size:small"> * 
		 <a href="/quizes/<%=quiz.id%>/comments/<%=quiz.comments[index].id%>/publishmas"><img src="/images/icomanoarriba.png"/> Votos+ </a>
		 <%= quiz.comments[index].votospos %> * 
		   <a href="/quizes/<%=quiz.id%>/comments/<%=quiz.comments[index].id%>/publishmenos"><img src="/images/icomanoabajo.png"/> Votos- </a>
		   <%= quiz.comments[index].votosneg %> * 
		   por <%= quiz.comments[index].nick %> * </span>
		   
		   <% if (session.user && ! quiz.comments[index].publicado) { %> 
				<a href="/quizes/<%=quiz.id%>/comments/<%=quiz.comments[index].id%>/publish">
				 <button>Publicar</button></a> 
		   <% } %> 
		</p>
	<% } %> 
<% } %>
</div>